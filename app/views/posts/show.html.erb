<%= @post.title %>
<%= @post.content %>

<% @post.categories.each do |category| %>
  <%= category.name %>
<% end %>

<% @post.comments.each do |comment| %>
  <%= comment.user.username %> says: <%= comment.content %>
<% end %>

<%= form_for @post.comments.build do |f| %>
  <%= f.text_area :content %>
  
  <%= f.hidden_field :post_id, value: @post.id %>
  <%= f.submit %>
  
  
<% end %>